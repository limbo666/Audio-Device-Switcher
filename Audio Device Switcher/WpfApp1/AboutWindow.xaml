<Window x:Class="AudioDeviceSwitcher.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Audio Device Switcher" Height="700" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F8F9FA"
        Icon="/Resources/Icon.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Logo -->
        <Image Grid.Row="0" Source="/Resources/Logo.png" 
               Width="80" Height="80
               " 
               Margin="0,0,0,20"
               HorizontalAlignment="Center"/>

        <!-- Program Name (from Assembly) -->
        <TextBlock Grid.Row="1" Name="ProgramNameText"
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Program Description (from Assembly) -->
        <TextBlock Grid.Row="2" Name="ProgramDescriptionText" TextAlignment="Center"
                   FontSize="14" Foreground="#6B7280"
                   Margin="0,0,0,8" TextWrapping="Wrap"/>

        <!-- Version (from Assembly) -->
        <TextBlock Grid.Row="3" Name="VersionText"
                   FontSize="13" Foreground="#9CA3AF" 
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- First Horizontal Line -->
        <Border Grid.Row="4" Height="1" Background="#E5E7EB" 
                Margin="20,0,20,20"/>

        <!-- Vendor Image (Clickable) - Bigger size -->
        <Border Grid.Row="5" Background="Transparent" 
                HorizontalAlignment="Center" Margin="0,0,0,15"
                Cursor="Hand" MouseLeftButtonUp="OnVendorImageClick">
            <Image Source="/Resources/Vendor.png" 
                   Width="100" Height="100"/>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <!-- Hand Water Pump Link -->
        <TextBlock Grid.Row="6" HorizontalAlignment="Center" Margin="0,0,0,8">
            <Hyperlink NavigateUri="http://georgousis.info" 
                       RequestNavigate="OnHyperlinkRequestNavigate"
                       TextDecorations="None"
                       Foreground="#3B82F6">
                <Run Text="Hand Water Pump" FontSize="16" FontWeight="SemiBold"/>
            </Hyperlink>
        </TextBlock>

        <!-- Author Name -->
        <TextBlock Grid.Row="7" Text="Nikos Georgousis" 
                   FontSize="14" Foreground="#6B7280" 
                   TextAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Decorative Separator -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="⋄" FontSize="12" Foreground="#D1D5DB" Margin="5,0"/>
            <TextBlock Text="⋄" FontSize="12" Foreground="#D1D5DB" Margin="5,0"/>
            <TextBlock Text="⋄" FontSize="12" Foreground="#D1D5DB" Margin="5,0"/>
        </StackPanel>

        <!-- GitHub Link -->
        <TextBlock Grid.Row="9" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Hyperlink NavigateUri="https://github.com/limbo666/Audio-Device-Switcher" 
                       RequestNavigate="OnHyperlinkRequestNavigate"
                       TextDecorations="None"
                       Foreground="#3B82F6">
                <TextBlock>
                    <Run Text="🐙 Visit GitHub Page" FontSize="14" FontWeight="Medium"/>
                </TextBlock>
            </Hyperlink>
        </TextBlock>

        <!-- Second Horizontal Line -->
        <Border Grid.Row="10" Height="1" Background="#E5E7EB" 
                Margin="20,0,20,20"/>

        <!-- PayPal Logo and Support Message -->
        <Border Grid.Row="11" Background="White" 
                BorderBrush="#E5E7EB" BorderThickness="1"
                CornerRadius="8" Padding="15"
                HorizontalAlignment="Stretch" Margin="0,0,0,15"
                Cursor="Hand" MouseLeftButtonUp="OnPayPalClick">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PayPal Logo (Left) -->
                <Image Grid.Column="0" Source="/Resources/Paypal.png" 
                       Width="96" Height="24" 
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>

                <!-- Support Text (Right) -->
                <TextBlock Grid.Column="1" 
                           VerticalAlignment="Center"
                           FontSize="11" Foreground="#6B7280" 
                           TextWrapping="Wrap" LineHeight="16">
                    <Run Text="Support this software. Your PayPal donation helps keep this program updated, and awesome. Every bit counts. Thank you!"/>
                </TextBlock>
            </Grid>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F8F9FA"/>
                            <Setter Property="BorderBrush" Value="#3B82F6"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <!-- Info Panel -->
        <Border Grid.Row="12" Background="#F0F9FF" BorderBrush="#BAE6FD" BorderThickness="1" 
                CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock TextAlignment="Center" FontSize="12" Foreground="#0369A1" TextWrapping="Wrap">
                    <Run Text="Thank you for using Audio Device Switcher! "/>
                    <Run Text="Your support helps improve this free software."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="13" Content="Close" 
                Width="80" Height="32" 
                FontSize="13" FontWeight="Medium"
                Background="#6B7280" BorderBrush="#6B7280" BorderThickness="1" 
                Foreground="White" HorizontalAlignment="Center"
                Click="OnCloseClick" IsDefault="True" IsCancel="True">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4B5563"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>