<Window x:Class="AudioDeviceSwitcher.DonationReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Support Audio Device Switcher" Height="460" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F8F9FA"
        Icon="/Resources/Icon.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="/Resources/Logo.png" Width="48" Height="48" 
                   VerticalAlignment="Center" Margin="0,0,15,0"/>
            <TextBlock Text="Audio Device Switcher" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#2C3E50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Message -->
        <TextBlock Grid.Row="1" TextAlignment="Center" FontSize="14" 
                   Foreground="#374151" Margin="0,0,0,20" TextWrapping="Wrap" LineHeight="22">
            <Run Text="You've been using Audio Device Switcher for over 30 days!" FontWeight="SemiBold"/>
            <LineBreak/><LineBreak/>
            <Run Text="This software is free to use, but your support helps keep it updated and awesome. "/>
            <Run Text="If you find it useful, please consider making a small donation."/>
        </TextBlock>

        <!-- PayPal Section -->
        <Border Grid.Row="2" Background="White" 
                BorderBrush="#E5E7EB" BorderThickness="1"
                CornerRadius="8" Padding="20"
                HorizontalAlignment="Stretch"
                Cursor="Hand" MouseLeftButtonUp="OnPayPalClick">
            <StackPanel HorizontalAlignment="Center">
                <Image Source="/Resources/Paypal.png" 
                       Width="120" Height="30" 
                       Margin="0,0,0,15"/>
                <TextBlock Text="Click to make a donation" 
                           FontSize="14" Foreground="#3B82F6" 
                           TextAlignment="Center" FontWeight="Medium"/>
                <TextBlock Text="Every contribution helps!" 
                           FontSize="12" Foreground="#6B7280" 
                           TextAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F8FF"/>
                            <Setter Property="BorderBrush" Value="#3B82F6"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

      

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="LaterButton" Content="Maybe Later" 
                    Width="100" Height="32" Margin="0,0,15,0" 
                    FontSize="13"
                    Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                    Click="OnLaterClicked" IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="6" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Name="ThankYouButton" Content="Thank You!" 
                    Width="100" Height="32" 
                    FontSize="13" FontWeight="Medium"
                    Background="#3B82F6" BorderBrush="#3B82F6" BorderThickness="1" 
                    Foreground="White"
                    Click="OnThankYouClicked" IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="6" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2563EB"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1D4ED8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>